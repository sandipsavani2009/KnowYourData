<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_20"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView android:id="@+id/data_title_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purpose"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/blue_0f1d2c_90"
                android:fontFamily="@font/rokkitt_extra_bold"/>

            <TextView android:id="@+id/data_desc_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purpose_desc"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/grey"
                android:fontFamily="@font/lato_black"
                android:layout_marginTop="@dimen/dim_20"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout android:id="@+id/data_available_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/grey_cccccc">

        <TextView android:id="@+id/data_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Data"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/green_dark_shadow_disable"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_marginTop="@dimen/dim_20"/>

        <TextView android:id="@+id/data_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="value"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/green_dark_shadow_disable"
            android:fontFamily="@font/lato_bold"
            android:layout_marginTop="@dimen/dim_20"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/data_not_available_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/grey_cccccc"
        android:visibility="gone">

        <TextView android:id="@+id/permission_request_msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Data"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/green_dark_shadow_disable"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_marginTop="@dimen/dim_20"/>

        <Button android:id="@+id/permission_request_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check it out"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_20"
            />

    </LinearLayout>

</LinearLayout>
