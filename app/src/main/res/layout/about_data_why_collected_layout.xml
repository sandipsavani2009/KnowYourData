<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_20"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apps access device data for different interests"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/grey_999999"
        android:fontFamily="@font/lato_black"
        android:layout_marginTop="@dimen/dim_30"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Functional Demand"
        android:textSize="@dimen/sp_21"
        android:textColor="@color/green_dark_shadow_disable"
        android:fontFamily="@font/lato_black"
        android:layout_marginTop="@dimen/dim_50" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location data for cab service provider"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_969696"
        android:fontFamily="@font/lato_black"
        android:layout_marginTop="@dimen/dim_10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Non Functional Demand"
        android:textSize="@dimen/sp_21"
        android:textColor="@color/green_dark_shadow_disable"
        android:fontFamily="@font/lato_black"
        android:layout_marginTop="@dimen/dim_50" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collecting network &amp; device info for financial transactions"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_969696"
        android:fontFamily="@font/lato_black"
        android:layout_marginTop="@dimen/dim_10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Analytical &amp; business demand"
        android:textSize="@dimen/sp_21"
        android:textColor="@color/green_dark_shadow_disable"
        android:fontFamily="@font/lato_black"
        android:layout_marginTop="@dimen/dim_50" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your data used to target you in favour of interests of business(or organization) which App offers"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_969696"
        android:fontFamily="@font/lato_black"
        android:layout_marginTop="@dimen/dim_10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Other many..."
        android:textSize="@dimen/sp_21"
        android:textColor="@color/green_dark_shadow_disable"
        android:fontFamily="@font/lato_black"
        android:layout_marginTop="@dimen/dim_50" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Depending on what data could be used for what purpose (Nature of data), how &amp; when collected, how it could help make decisions"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_969696"
        android:fontFamily="@font/lato_black"
        android:layout_marginTop="@dimen/dim_10" />

</LinearLayout>